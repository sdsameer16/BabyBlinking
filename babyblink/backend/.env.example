# Backend environment configuration for Baby Blink
# Copy this file to .env and fill in the values

# Server
PORT=5000
# Allow all origins by default or set to specific origin like https://babyblinking.onrender.com
CORS_ORIGIN=*

# Database
# Example for local MongoDB: mongodb://127.0.0.1:27017/babyblink
# Example for Atlas: mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority
MONGO_URI=

# Auth
# Use a strong random string
JWT_SECRET=

# Email (optional)
# If not set or SKIP_EMAIL=true, OTP will be logged to server console instead of sending email
EMAIL_USER=
EMAIL_PASS=
SKIP_EMAIL=true
